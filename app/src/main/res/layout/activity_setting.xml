<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.test.clothnote.app.SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/linearLayout">
        <LinearLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_panel_height"
            android:orientation="horizontal" >
            <ImageView
                android:layout_width="@dimen/setting_image"
                android:layout_height="@dimen/setting_image"
                android:layout_gravity="center"
                android:clickable="false"
                android:contentDescription="@null"
                android:src="@drawable/ic_bullseye" />
            <TextView
                android:id="@+id/startfloat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:clickable="false"
                android:text="悬浮记事" />
            <Switch
                android:layout_width="200px"
                android:layout_height="@dimen/arrow_size"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:text="New"
                android:id="@+id/float_switch"
              />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_panel_height"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/setting_image"
                android:layout_height="@dimen/setting_image"
                android:layout_gravity="center"
                android:clickable="false"
                android:contentDescription="@null"
                android:src="@drawable/ic_bullseye" />

            <TextView
                android:id="@+id/out2txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:clickable="false"
                android:text="导出到sdcard" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/third"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_panel_height"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/setting_image"
                android:layout_height="@dimen/setting_image"
                android:layout_gravity="center"
                android:clickable="false"
                android:contentDescription="@null"
                android:src="@drawable/ic_bullseye" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:clickable="false"
                android:text="设置主页图片" />
            <Button
                android:id="@+id/imageChoose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

